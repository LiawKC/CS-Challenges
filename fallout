import random

x = " "

SpecialCharacters = ["!","#","$","%","&","'","(",")","*","+",",","-",".","/",":",";","=","<","=",">","?","@","[","]","^","_"]
EligibleWords = ["KNOWN","CRIME","BOOTS","MAYBE","STARK","MALES","WASTE","TAKES","BANANA","BEAR","PIG","DOG","PIE"]

ActualWord = random.choice(EligibleWords)

WordsList = []

for i in range(len(EligibleWords)):
    RandomWord = random.choice(EligibleWords)
    WordsList.append(RandomWord)
    EligibleWords.remove(RandomWord)

RandomNumber1 = random.randint(10,20)
RandomNumber2 = random.randint(10,20)
RandomNumber3 = random.randint(10,20)
