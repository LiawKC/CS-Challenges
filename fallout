Count = 0

while True:
    UserChoice = input("Guess a word, chosen one: ")
    for i in UserChoice:
        if i in ActualWord:
            Count = Count + 1
            print("The likeness is", Count)
        if UserChoice == ActualWord:
            print("YAS! QUEEN SLAY!!! YOU DID IT!")
